<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import de.briemla.clockradio.ViewSwitcher?>
<?import de.briemla.clockradio.AlarmView?>

<fx:root styleClass="main-panel" prefHeight="600.0" prefWidth="800.0" type="VBox" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <AnchorPane styleClass="top-bar" maxHeight="50.0" prefHeight="50.0">
         <children>
         	<Button mnemonicParsing="false" styleClass="shutdown" onAction="#shutdown" prefHeight="50.0" prefWidth="50.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0" />
            <Button mnemonicParsing="false" onAction="#openSettings" prefHeight="50.0" prefWidth="100.0" text="Einstellungen" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
         </children>
      </AnchorPane>
      <ViewSwitcher fx:id="viewSwitch" maxHeight="500.0" prefHeight="500.0" prefWidth="800.0"/>
      <AlarmView fx:id="alarm"/>
   </children>
</fx:root>
