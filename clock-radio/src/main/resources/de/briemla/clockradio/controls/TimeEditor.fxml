<fx:root styleClass="time" type="AnchorPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
	<children>
		<HBox styleClass="display" alignment="CENTER" maxHeight="100.0" minHeight="100.0" prefHeight="100.0" prefWidth="250.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
			<children>
				<Label id="hour" fx:id="hour" alignment="CENTER_RIGHT" contentDisplay="RIGHT" text="00" />
				<Label text=":" />
				<Label id="minute" fx:id="minute" text="00" />
			</children>
		</HBox>
		<VBox styleClass="setting" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="100.0">
			<children>
				<StackPane fx:id="hourParent" maxHeight="300.0" maxWidth="300.0" minHeight="300.0" minWidth="300.0">
					<children>
						<Pointer2Circle fx:id="hourPointer"/>
						<CircularPane fx:id="afternoon" diameter="250.0" startAngle="-15.0" />
						<CircularPane fx:id="morning" diameter="180" startAngle="-15.0" />
					</children>
				</StackPane>
				<StackPane fx:id="minuteParent" maxHeight="300.0" maxWidth="300.0" minHeight="300.0" minWidth="300.0">
					<children>
						<Pointer fx:id="minutePointer"/>
						<CircularPane fx:id="minuteCircle" diameter="250.0" startAngle="15.0" />
					</children>
				</StackPane>
			</children>
		</VBox>
	</children>
</fx:root>
